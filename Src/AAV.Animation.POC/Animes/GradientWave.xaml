<UserControl x:Class="AAV.Animation.POC.Animes.GradientWave" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"         
             xmlns:models="clr-namespace:Cities.Models" d:DesignHeight="200" d:DesignWidth="420">
  <UserControl.Resources>
  </UserControl.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="10*" />
    </Grid.ColumnDefinitions>

    <Rectangle  Fill="{StaticResource awesomeFill}" >
      <Rectangle.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <BeginStoryboard Storyboard="{StaticResource awesomeFillStoryboard}"/>
        </EventTrigger>
      </Rectangle.Triggers>
    </Rectangle>
    <Grid Background="{StaticResource awesomeBkGr}" Grid.Column="1" >
      <Grid.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <BeginStoryboard Storyboard="{StaticResource awesomeBkGrStoryboard}"/>
        </EventTrigger>
      </Grid.Triggers>
    </Grid>

    <Rectangle  Fill="{StaticResource awesomeFill}" Grid.Column="2" >
      <Rectangle.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.MouseEnter">
          <BeginStoryboard Storyboard="{StaticResource awesomeFillStoryboard}"/>
        </EventTrigger>
      </Rectangle.Triggers>
    </Rectangle>
    <Grid Background="{StaticResource awesomeBkGr}" Grid.Column="3" >
      <Grid.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.MouseEnter">
          <BeginStoryboard Storyboard="{StaticResource awesomeBkGrStoryboard}"/>
        </EventTrigger>
      </Grid.Triggers>
    </Grid>

    <Grid Style="{StaticResource awesomeGridStyle}" Grid.Column="4" />

    <!--
    <Rectangle Fill="Green" Grid.Column="5">
      <Rectangle.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <BeginStoryboard Storyboard="{StaticResource ColorFlashingFBC}"/>
        </EventTrigger>
      </Rectangle.Triggers>
    </Rectangle>
    -->

    <DataGrid Grid.Column="6" AutoGenerateColumns="False" x:Name="dg2"        ItemContainerStyle="{StaticResource AnimOpacityDataGridRowStyle}"               VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="Transparent" 
              Background="{StaticResource awesomeBkGr}" >
      <DataGrid.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <BeginStoryboard Storyboard="{StaticResource awesomeBkGrStoryboard}"/>
        </EventTrigger>
      </DataGrid.Triggers>
      <DataGrid.Columns>
        <DataGridTextColumn     Binding="{Binding ID}"   Header="ID" />
        <DataGridCheckBoxColumn Binding="{Binding Done}" Header="Done" />
        <DataGridTextColumn     Binding="{Binding Name}" Header="Name" Width="2*"      CellStyle="{StaticResource AnimOpacityDataGridCellStyle}" />
        <DataGridTemplateColumn >
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Grid >
                <TextBox Text="{Binding Name}" Style="{StaticResource awesomeControlStyle}" />
              </Grid>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
      <DataGrid.ItemsSource>
        <x:Array Type="{x:Type models:SampleListItem}">
          <models:SampleListItem ID="77" Name="Abc123" Done="False" />
          <models:SampleListItem ID="71" Name="Aen an" Done="False" />
          <models:SampleListItem ID="56" Name="Mauris" Done="True"  />
        </x:Array>
      </DataGrid.ItemsSource>
    </DataGrid>

    <Button Click="onChange" Content="_Change" Grid.Column="6" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

  </Grid>
</UserControl>
