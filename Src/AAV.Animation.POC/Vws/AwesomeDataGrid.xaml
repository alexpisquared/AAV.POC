<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:Animes="clr-namespace:AAV.Animation.POC.Animes" x:Class="AAV.Animation.POC.Vws.AwesomeDataGrid" Title="AwesomeDataGrid" Height="600" Width="800" Background="#333">
  <Grid RenderTransformOrigin="0.5,0.5" Margin="150">
    <Grid.RenderTransform>
      <TransformGroup>
        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
        <SkewTransform/>
        <RotateTransform />
        <TranslateTransform/>
      </TransformGroup>
    </Grid.RenderTransform>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Button IsCancel="True" Click="onClose" Opacity="1" HorizontalAlignment="Right" VerticalAlignment="Top" />

    <Animes:GradientWave Margin="0" Grid.Row="0"/>
    <Animes:GradientWave Margin="0" Grid.Row="1"/>

  </Grid>
</Window>
